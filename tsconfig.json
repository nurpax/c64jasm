{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "build",
        "sourceMap": true,
        "allowJs": true,

        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noImplicitReturns": true,

        "lib": ["es2017"]
    },
    "files": [
        "src/index.ts",
        "src/asm.ts",
        "src/ast.ts",
        "src/disasm.ts",
        "src/cli.ts",
        "test/test.ts"
    ]
}
